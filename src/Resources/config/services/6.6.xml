<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Shopware\Core\Framework\Routing\RouteScopeListener"
                 class="Sumedia\WinestroAPI\Core\Framework\Routing\RouteScopeListener">
            <tag name="kernel.event_subscriber"/>
            <tag name="container.hot_path"/>
            <argument type="service" id="Shopware\Core\Framework\Routing\RouteScopeRegistry"/>
            <argument type="service" id="request_stack"/>
            <argument type="tagged_iterator" tag="shopware.route_scope_whitelist"/>
        </service>

        <!--

            Controller

        -->

        <service id="sumedia-wbo-check-connection" class="Sumedia\WinestroAPI\Controller\SumediaWboApiTestController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <!--

            Cron

        -->

        <service id="Sumedia\WinestroAPI\Cron\UpdateWineGroupsHandler">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="service_container" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\UpdateArticlesHandler">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="service_container" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\ExportOrdersHandler">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="service_container" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\CronHealthCheckHandler">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="service_container" />
            <tag name="messenger.message_handler" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\CheckOrderStatusHandler">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="scheduled_task.repository" />
            <argument type="service" id="service_container" />
            <tag name="messenger.message_handler" />
        </service>

    </services>
</container>