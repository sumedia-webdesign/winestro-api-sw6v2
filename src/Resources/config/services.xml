        <!--

            DataMapper

        -->

            <service id="Sumedia\WinestroApi\Winestro\DataMapper\ConfigMapper" />
            <service id="Sumedia\WinestroApi\Winestro\DataMapper\PaymentConfigMapper" />
            <service id="Sumedia\WinestroApi\Winestro\DataMapper\ShippingConfigMapper" />
            <service id="Sumedia\WinestroApi\Winestro\DataMapper\WinestroArticleDataMapper" />

        <!--

            Winestro API

        -->

        <service id="Sumedia\WinestroApi\Winestro\RequestManager">
            <argument type="service" id="service_container" />
        </service>

        <service id="Sumedia\WinestroApi\Winestro\Connection" shared="false" public="true">
