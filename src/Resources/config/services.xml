<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="Sumedia\WinestroAPI\LoggerFactory">
            <argument type="string">%kernel.logs_dir%/%%s_%kernel.environment%.log</argument>
            <argument>%shopware.logger.file_rotation_count%</argument>
        </service>

        <service id="Sumedia\WinestroAPI\DebugLogger" class="Monolog\Logger">
            <factory service="Sumedia\WinestroAPI\LoggerFactory" method="createRotating"/>
            <argument type="string">sumedia_wbo</argument>
        </service>

        <service id="Sumedia\WinestroAPI\ErrorLogger" class="Monolog\Logger">
            <factory service="Sumedia\WinestroAPI\LoggerFactory" method="createRotating"/>
            <argument type="string">sumedia_wbo_error</argument>
        </service>

        <service id="Sumedia\WinestroAPI\Config\WboConfig" public="true">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService" />
        </service>

        <service id="Sumedia\WinestroAPI\Context" class="Sumedia\WinestroAPI\Service\Context" public="true" />

        <service id="Sumedia\WinestroAPI\Service\Wbo\Connector" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Credentials" />
            <argument type="string">DE</argument>
            <argument type="string">utf-8</argument>
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Credentials" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\ArticleNumberParser" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Entity\ProductExtensionSubscriber">
            <argument type="service" id="wbo_articles.repository" />
            <tag name="kernel.event_subscriber" />
        </service>

        <!--

            CLI

        -->

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\Cli\SetArticles" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles" />
            <tag name="console.command" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\Cli\CronHealthCheck" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\CronHealthCheck" />
            <tag name="console.command" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\Cli\ExportOrders" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\ExportOrders" />
            <tag name="console.command" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\Cli\SetWineGroups" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetWineGroups" />
            <tag name="console.command" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\Cli\CheckOrderStatus" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\CheckOrderStatus" />
            <tag name="console.command" />
        </service>

        <!--

            Commands

        -->

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\DeactivateOutOfStockBundles" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="wbo_articles.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetWineGroups" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="wbo_wine_groups.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Request\GetWineGroups" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Connector" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\CheckOrderStatus" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Connector" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Request\CheckOrderStatus" />
            <argument type="service" id="order.repository" />
            <argument type="service" id="order_delivery.repository" />
            <argument type="service" id="Shopware\Core\System\StateMachine\StateMachineRegistry"/>
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Images" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="media.repository" />
            <argument type="service" id="media_folder.repository" />
            <argument type="service" id="product_media.repository" />
            <argument type="service" id="Shopware\Core\Content\Media\File\FileFetcher" />
            <argument type="service" id="Shopware\Core\Content\Media\File\FileSaver" />
            <argument type="service" id="Shopware\Core\Content\Media\MediaService"/>
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Price" public="true">
            <argument type="service" id="currency.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Quality" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Grape" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Unit" public="true">
            <argument type="service" id="unit.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Cultivation" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Taste" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Year" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Category" public="true">
            <argument type="service" id="property_group_option.repository" />
            <argument type="service" id="property_group.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\FreeShipping" public="true" />

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Manufacturer" public="true">
            <argument type="service" id="product_manufacturer.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Stock" public="true">
            <argument type="service" id="wbo_articles.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Request\GetBestand" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Connector" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\DeliveryTime" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\IsActive" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\SalesChannel" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="product_visibility.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\SetCategories" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="category_translation.repository" />
            <argument type="service" id="product_category.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\FilterCollection" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Stock" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Images" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Price" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Quality" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Grape" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Unit" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Cultivation" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\FreeShipping" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\IsActive" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Taste" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Year" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Category" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\Manufacturer" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\DeliveryTime" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\SalesChannel" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\SetCategories" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles"
                 public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="wbo_articles.repository" />
            <argument type="service" id="wbo_products.repository" />
            <argument type="service" id="product.repository" />
            <argument type="service" id="tax.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Request\GetArticles" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Connector" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\ArticleNumberParser" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\FilterCollection" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Command\SetArticles\DeactivateOutOfStockBundles" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\CronHealthCheck" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
            <argument type="service" id="scheduled_task.repository" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Command\ExportOrders" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\DebugLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\ErrorLogger" />
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Connector" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
            <argument type="service" id="Sumedia\WinestroAPI\Service\Wbo\Request\ExportOrders" />
            <argument type="service" id="plugin.repository" />
            <argument type="service" id="order.repository" />
            <argument type="service" id="order_address.repository" />
            <argument type="service" id="order_delivery.repository" />
            <argument type="service" id="order_transaction.repository" />
            <argument type="service" id="payment_method.repository" />
            <argument type="service" id="shipping_method.repository" />
            <argument type="service" id="order_line_item.repository" />
            <argument type="service" id="customer.repository" />
            <argument type="service" id="salutation.repository" />
            <argument type="service" id="country.repository" />
            <argument type="service" id="wbo_articles.repository" />
            <argument type="service" id="product.repository" />
        </service>

        <!--

            Cron

        -->

        <service id="Sumedia\WinestroAPI\Cron\UpdateWineGroups">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\UpdateArticles">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\ExportOrders">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\CronHealthCheck">
            <tag name="shopware.scheduled.task" />
        </service>

        <service id="Sumedia\WinestroAPI\Cron\CheckOrderStatus">
            <tag name="shopware.scheduled.task" />
        </service>



        <!--

            Definition

        -->

        <service id="Sumedia\WinestroAPI\Entity\WboWineGroupsDefinition">
            <tag name="shopware.entity.definition" entity="wbo_wine_groups" />
        </service>

        <service id="Sumedia\WinestroAPI\Entity\WboArticlesDefinition">
            <tag name="shopware.entity.definition" entity="wbo_articles" />
        </service>

        <service id="Sumedia\WinestroAPI\Entity\WboProductsDefinition">
            <tag name="shopware.entity.definition" entity="wbo_products" />
        </service>

        <!--

            Request

        -->

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\GetEinstellungen" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\GetWineGroups" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\GetArticles" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\GetBestand" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\ExportOrders" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
            <argument type="string"></argument>
            <argument type="string"></argument>
            <argument type="string"></argument>
            <argument type="service" id="product.repository" />
            <argument type="service" id="wbo_articles.repository" />
            <argument type="service" id="Sumedia\WinestroAPI\Context" />
        </service>

        <service id="Sumedia\WinestroAPI\Service\Wbo\Request\CheckOrderStatus" public="true">
            <argument type="service" id="Sumedia\WinestroAPI\Config\WboConfig" />
        </service>

    </services>

</container>
